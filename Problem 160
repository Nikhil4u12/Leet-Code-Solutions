public class Solution {
    public ListNode getIntersectionNode(ListNode headA, ListNode headB) {

         int lena = 0;
        ListNode tempA = headA;
       
        while(tempA != null){
            tempA=tempA.next;
            lena++;
        }

           
        int lenb =0;
        ListNode tempB = headB;
         while(tempB != null){
              tempB=tempB.next;
              lenb++;
        } 
        tempA = headA;
        tempB = headB;
        if(lena > lenb){
            for(int i =1; i<=lena-lenb;i++){
                tempA = tempA.next;
            }
        }
        else{
            for(int i =1; i<=lenb-lena;i++){
                tempB = tempB.next;
            }
        }

        while(tempA != tempB){
            tempA = tempA.next;
            tempB = tempB.next;
        }
        return tempA;
        
    }
}
